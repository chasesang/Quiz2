<div>
  <h1 style="display:inline-block">Idea Factory</h1>
  <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">New Post</button>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">New Post</h4>
      </div>
      <div class="modal-body">

        <%= @newidea.errors.full_messages.join(', ') %>
        <%= form_for @newidea do |f| %>

        <form>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit "Create", class:"btn btn-primary" %>

          </div>
        </form>
      </div>

    </div>
  </div>
</div>
<% end %>

<div class="idea">

<% @ideas.each do |idea| %>
<div class="idea_title">

<h3><%= idea.title %></h3>
</div>
<div class="idea_body">
<p><%= idea.body %></p>
</div>

<p><%= idea.user.first_name %></p>
<p>Likes: <%= idea.likes.count %></p>
<%= link_to "View", idea_path(idea), class: 'btn btn-primary' %>
<%= link_to "Join", idea_path(idea), class: 'btn btn-primary' %>
<%= link_to "Like", idea_likes_path(idea), class: 'btn btn-primary', method: :post %>
<hr>
<% end %>
